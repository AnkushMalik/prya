.page-header.secondary-color
	.container
		%h3.white-text Your Pitch Decks
		=link_to "/",{class: "btn btn-floating btn-large right orange tooltipped","data-tooltip": "Create new Pitch Deck","data-position": "top"} do
			%i.material-icons add
.container
	.row
		-for i in 1..3 do
			.col.s12.m4.l3
				.card
					.card-image
						%img.card-img.responsive-img{:src => "http://via.placeholder.com/200x200", :alt => ""}/
						.card-title
							%strong
								Secul
						=link_to "#",{class: "btn-floating halfway-fab red tooltipped","data-tooltip": "View","data-position": "top",style: "right: 80px;"} do
							%i.material-icons pageview
						=link_to "#",{class: "btn-floating halfway-fab red tooltipped amber","data-tooltip": "Edit","data-position": "top"} do
							%i.material-icons create
					.card-content
						%span.text-muted
							Nothing about people and culture

			