						.card-content
							.row
								.col.s3.center
									%img.profile-thumb{src: "http://via.placeholder.com/32x32"}
								.col.s9
									.row
										.s12
											%p.medium-weight.medium= @startup.title
											%p.text-muted= @startup.about
							.divider.mb-1
							.row
								%span.text-muted= @startup.description

				.col.s12.m8.l7
					= render "shared/post"
